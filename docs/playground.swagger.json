      "get": {
        "summary": "Verify email",
        "description": "Use this API to verify user's email address",
        "operationId": "Playground_VerifyEmail",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/protoVerifyEmailResponse"
